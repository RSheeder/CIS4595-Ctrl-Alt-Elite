<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivity"
    android:background="@color/LightBlue">


    <Button
        android:id="@+id/buttonGetLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/Snow"
        android:text="Get Location Info" />

    <TextView
        android:id="@+id/LocationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonGetLocation"
        android:layout_marginTop="10dp"
        android:text="Location:" />

    <TextView
        android:id="@+id/CityText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LocationText"
        android:layout_marginTop="5dp"
        android:text="" />

    <TextView
        android:id="@+id/PostalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CityText"
        android:layout_marginTop="5dp"
        android:text="Postal:" />

    <TextView
        android:id="@+id/SelectUsernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PostalText"
        android:layout_marginTop="20dp"
        android:text="Select Chatroom Username: " />

    <EditText
        android:id="@+id/UsernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PostalText"
        android:layout_toRightOf="@+id/SelectUsernameText" />

    <TextView
        android:id="@+id/SelectTopicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SelectUsernameText"
        android:layout_marginTop="20dp"
        android:text="Select Topic: " />

    <Spinner
        android:id="@+id/topicSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UsernameEditText"
        android:layout_toRightOf="@id/SelectTopicText" />

    <Button
        android:id="@+id/messenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PostalText"
        android:layout_alignBottom="@+id/PostalText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="221dp"
        android:background="@color/Snow"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="-269dp"
        android:text="Messenger" />

    <Button
        android:id="@+id/sign_Out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/buttonGetLocation"
        android:background="@color/Snow"
        android:text="SignOut" />


</RelativeLayout>